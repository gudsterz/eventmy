<div class="container">
  <div class="center">
    <h2>Your Event Listing</h2><hr>
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-md-3">
           <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing %>
             <div class="caption">
               <h3><%= listing.name %></h3>
               <p><strong><%= number_to_currency(listing.price) %></strong></p>
               <p><%= "By #{listing.user.name}" %></p>
               <% if (user_signed_in?) && (current_user == listing.user) %>
               <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
               <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
               <% end %>
             </div>
           </div>
        </div>
      <% end %>
    </div>
  </div>
</div>