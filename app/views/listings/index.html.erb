<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
         <div class="thumbnail">
          <%= image_tag listing.image.url %>
           <div class="caption">
             <h3><%= listing.name %></h3>
             <p><strong><%= number_to_currency(listing.price) %></strong></p>
             <p><%= link_to 'Join Event', listing, class: "btn btn-danger btn-xs" %></p>
             <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
             <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
           </div>
         </div>
      </div>
    <% end %>
  </div>
  <br>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
</div>
