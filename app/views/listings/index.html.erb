<div class="listing">
  <div class="jumbotron">
    <div class="container">
      <h1>Malaysian Event Marketplace</h1>
          <p>Whether you're organizing a seminar, fundraising dinner, academic exhibition or <br>business conference, EventMy provides the online tools you need</p>
          <br>
          <p><%= link_to 'Sign Up &raquo;'.html_safe, new_user_registration_path, class: "btn btn-primary btn-lg" %>
          <a class="btn btn-primary btn-lg" href="#" role="button">Explore Events &raquo;</a></p>
     
    </div>
  </div>

  <div class="container">
    <div class="center">
      <h2>Explore your mission locally</h2><hr>
      <div class="row">
        <% @listings.each do |listing| %>
          <div class="col-md-3">
             <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %>
               <div class="caption">
                 <h3><%= listing.name %></h3>
                 <p><strong><%= number_to_currency(listing.price) %></strong></p>
                 <p><%= "By #{listing.user.name}" %></p>
               </div>
             </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>